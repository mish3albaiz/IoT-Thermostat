<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#000000"/>
        </shape>
    </item>
    <item android:bottom="5dp" android:right="3dp">
        <shape android:shape="oval">
            <solid android:color="#fff"/>
            <gradient
                android:startColor="@color/scheme_light_blue"
                android:endColor="@color/scheme_gray"
                android:angle="90"
                />
            <stroke android:color="@color/scheme_gray" android:width="3dp"/>
            <size android:width="90dp" android:height="90dp"/>
        </shape>
    </item>
</layer-list>